pipeline {
    agent any

    environment {
        PYTHON_ENV = "${WORKSPACE}/venv"
    }

    triggers {
        // Manual trigger only
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/yourusername/messaging-app.git',
                    credentialsId: 'github-creds'
            }
        }

        stage('Set up Python Environment') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest --junitxml=reports/test-results.xml --html=reports/test-report.html || true
                '''
            }
        }

        stage('Publish Test Report') {
            steps {
                junit 'reports/test-results.xml'
                publishHTML(target: [
                    reportDir: 'reports',
                    reportFiles: 'test-report.html',
                    reportName: 'Pytest HTML Report'
                ])
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'reports/**/*', fingerprint: true
            cleanWs()
        }
    }
}
